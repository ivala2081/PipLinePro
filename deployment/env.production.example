# Production Environment Variables for PipLinePro
# Copy this file to .env on the server and customize the values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security Keys (IMPORTANT: Generate new ones for production!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# Database Configuration
DATABASE_URL=sqlite:///instance/treasury_improved.db

# Security Settings
BULK_DELETE_CONFIRMATION_CODE=4561

# Redis Configuration (Optional - comment out if not using Redis)
# REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=WARNING

# Application Settings
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Exchange Rate Settings
EXCHANGE_RATE_UPDATE_INTERVAL=900

# Session Settings
PERMANENT_SESSION_LIFETIME=28800
REMEMBER_COOKIE_DURATION=2592000

# Performance Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_TIMEOUT=20
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=300
