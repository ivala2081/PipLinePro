# PipLinePro Environment Configuration Example
# Copy this file to .env and update with your actual values

# Basic Configuration
FLASK_ENV=development
DEBUG=True

# Security Settings
SECRET_KEY=your-secret-key-here
BULK_DELETE_CONFIRMATION_CODE=4561

# Database Configuration
DATABASE_URL=sqlite:///instance/treasury_improved.db

# External Services
REDIS_URL=redis://localhost:6379/0

# Exchange Rate Service
EXCHANGE_RATE_UPDATE_INTERVAL=900  # 15 minutes in seconds

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=static/uploads

# Session Configuration
PERMANENT_SESSION_LIFETIME=28800  # 8 hours in seconds
REMEMBER_COOKIE_DURATION=2592000  # 30 days in seconds

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Performance Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=10
SQLALCHEMY_ENGINE_OPTIONS_POOL_TIMEOUT=20
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600
